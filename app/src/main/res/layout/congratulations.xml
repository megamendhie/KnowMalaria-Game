<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/layout_congrats">

    <LinearLayout
        android:background="#E9175E"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_margin="2dp"
            android:src="@drawable/ic_launcher"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONGRATULATIONS"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="#E9175E"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txtHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You have completed this level."
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:background="#E9175E"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.5"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rapid diagnostic test (RDT) is an alternate way of quickly establishing the diagnosis of malaria infection by detecting specific malaria antigens in a person's blood.
            RDTs require no capital investment or electricity, are simple to perform and  easy to interpret."
            android:textColor="#E9175E"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtHint"
            android:theme="@style/btnBg"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:text="NEXT"/>
    </RelativeLayout>
</LinearLayout>